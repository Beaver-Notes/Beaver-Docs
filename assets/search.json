---
---
[
  {% for post in site.posts %}
    {% assign author = site.authors[post.author] | default: site.authors["anonymous"] %}

    {% unless post.hidden %}
      {
        "title": "{{ post.title | escape }}",
        "description": "{% if post.description %}{{ post.excerpt | strip_html }}{% else %}{{ post.date | date: "%a, %b %e, %Y" }}{% endif %}",
        "content": {{ post.content | jsonify }},
        "image": "{% if post.image %}{{ post.image }}{% else %}https://www.gravatar.com/avatar/{{ author.gravatar }}?s=84&d=blank{% endif %}",
        "url": "{{ site.baseurl }}{{ post.url }}",
        "tags": "{{ post.tags | join: ', ' }}",
        "date": "{{ post.date }}"
      } {% unless forloop.last %},{% endunless %}
    {% endunless %}
  {% endfor %}
]